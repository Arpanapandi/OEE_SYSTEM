@{
    var title = ViewData["Title"] as string ?? "OEE Monitoring";
    var isOeeDetailPage = ViewData["IsOeeDetailPage"] as bool? ?? false;
}
<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - OEE Monitoring</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <style>
        body {
            background: #101317;
            color: #e4e6eb;
        }

        .navbar {
            background: linear-gradient(90deg, #141823, #1f2933);
            border-bottom: 1px solid #252b3b;
        }
        
        /* ✅ Style untuk navbar OEE Detail */
        .navbar-oee-detail {
            padding: 0.75rem 1rem;
        }
        
        .navbar-oee-detail .machine-title {
            font-size: 1.5rem;
            line-height: 1.2;
            margin-bottom: 0;
        }

        .card {
            background-color: #151924;
            border: 1px solid #23293a;
        }

        .machine-card {
            transition: transform .1s ease, box-shadow .1s ease;
        }

        .machine-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, .5);
        }

        .status-badge {
            padding: .25rem .75rem;
            border-radius: 999px;
            font-size: .75rem;
        }

        .status-running {
            background: rgba(34, 197, 94, .12);
            color: #22c55e;
        }

        .status-down {
            background: rgba(239, 68, 68, .12);
            color: #ef4444;
        }

        .status-idle {
            background: rgba(148, 163, 184, .12);
            color: #9ca3af;
        }

        .kpi-card {
            border-radius: .75rem;
        }

        .kpi-card.border-success {
            border-color: #198754 !important;
        }

        .kpi-card.border-warning {
            border-color: #ffc107 !important;
        }

        .kpi-card.border-info {
            border-color: #0dcaf0 !important;
        }

        .kpi-card.border-primary {
            border-color: #0d6efd !important;
        }

        .kpi-value {
            font-size: 1.75rem;
            font-weight: 700;
        }

        .kpi-value.text-success {
            color: #22c55e !important;
        }

        .kpi-value.text-warning {
            color: #ffc107 !important;
        }

        .kpi-value.text-info {
            color: #0dcaf0 !important;
        }

        .kpi-value.text-primary {
            color: #0d6efd !important;
        }

        .card-body canvas {
            max-height: 200px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark mb-3 @(isOeeDetailPage ? "navbar-oee-detail" : "")">
        <div class="container-fluid">
            @if (isOeeDetailPage)
            {
                <!-- ✅ Layout khusus untuk OEE Detail: Machine info di kiri -->
                <div class="d-flex flex-column">
                    <div class="d-flex align-items-center mb-0">
                        <h2 class="machine-title mb-0 me-2">
                            <i class="fa-solid fa-microchip me-2"></i>@(ViewData["MachineName"] ?? "Machine")
                        </h2>
                        @{
                            var machineStatus = ViewData["MachineStatus"] as OeeSystem.Models.MachineStatus?;
                            var statusClass = machineStatus switch
                            {
                                OeeSystem.Models.MachineStatus.Aktif => "status-running",
                                OeeSystem.Models.MachineStatus.TidakAktif => "status-down",
                                _ => "status-idle"
                            };
                            var statusText = machineStatus == OeeSystem.Models.MachineStatus.Aktif ? "Aktif" : "Tidak Aktif";
                        }
                        <span class="status-badge @statusClass">@statusText</span>
                    </div>
                    <div class="text-secondary small mt-1">
                        <i class="fa-solid fa-layer-group me-1"></i>@(ViewData["LineId"] ?? "")
                        <span class="ms-3">
                            <i class="fa-solid fa-calendar-day me-1"></i>@(ViewData["ShiftName"] ?? "") (@(ViewData["ShiftTime"] ?? ""))
                        </span>
                        <span class="ms-3">
                            <i class="fa-solid fa-clock me-1"></i>Standar Cycle Time Product: @(ViewData["StandarCycleTime"] ?? "0")s
                        </span>
                    </div>
                </div>
                
                <!-- ✅ OEE Monitoring dan Back button di kanan -->
                <div class="navbar-nav ms-auto d-flex flex-column align-items-end">
                    <a class="nav-link fw-semibold" asp-controller="Home" asp-action="Index">
                        <i class="fa-solid fa-industry me-2"></i>OEE Monitoring
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-sm mt-1">
                        <i class="fa-solid fa-arrow-left me-1"></i>Back to Dashboard
                    </a>
                </div>
            }
            else
            {
                <!-- ✅ Layout normal untuk halaman lain -->
                <a class="navbar-brand fw-semibold" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-industry me-2"></i>OEE Monitoring
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Home" asp-action="Index">
                                <i class="fa-solid fa-chart-line me-1 text-danger"></i>Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Index">
                                <i class="fa-solid fa-gear me-1"></i>Admin
                            </a>
                        </li>
                    </ul>
                </div>
            }
        </div>
    </nav>

    <div class="container-fluid pb-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <!-- SignalR Client Library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>


