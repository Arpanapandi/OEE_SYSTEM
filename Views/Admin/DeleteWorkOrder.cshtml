@model WorkOrder
@{
    ViewData["Title"] = "Delete Work Order";
}

<div class="row mb-3">
    <div class="col-12">
        <h2 class="mb-0"><i class="fa-solid fa-trash me-2"></i>Delete Work Order</h2>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h4 class="text-warning">Are you sure you want to delete this work order?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">ID:</dt>
            <dd class="col-sm-9">@Model.Id</dd>
            
            <dt class="col-sm-3">Order Number:</dt>
            <dd class="col-sm-9">@Model.OrderNumber</dd>
            
            <dt class="col-sm-3">Product:</dt>
            <dd class="col-sm-9">@(Model.Product?.Name ?? "N/A")</dd>
            
            <dt class="col-sm-3">Target Quantity:</dt>
            <dd class="col-sm-9">@Model.TargetQuantity</dd>
            
            <dt class="col-sm-3">Status:</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.Status == WorkOrderStatus.Planned ? "bg-secondary" : Model.Status == WorkOrderStatus.InProgress ? "bg-info" : "bg-success")">
                    @Model.Status
                </span>
            </dd>
        </dl>

        <form asp-action="DeleteWorkOrder" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger">
                    <i class="fa-solid fa-trash me-2"></i>Delete
                </button>
                <a asp-action="WorkOrders" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

