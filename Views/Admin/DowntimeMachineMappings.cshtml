@model IEnumerable<Machine>
@{
    ViewData["Title"] = "Downtime ⇄ Machine Mapping";
}

<div class="row mb-3">
    <div class="col-12 d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-0"><i class="fa-solid fa-link me-2"></i>Downtime ⇄ Machine Mapping</h2>
            <div class="text-secondary small">Atur problem/downtime reason yang akan tampil untuk setiap mesin</div>
        </div>
        <a asp-action="Machines" class="btn btn-outline-secondary">
            <i class="fa-solid fa-arrow-left me-1"></i>Back to Machines
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fa-solid fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th style="width: 10%;">ID</th>
                        <th style="width: 25%;">Machine Name</th>
                        <th style="width: 15%;">Line ID</th>
                        <th style="width: 40%;">Downtime Reasons</th>
                        <th style="width: 10%;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var machine in Model)
                    {
                        var reasons = machine.MachineDowntimeReasons?
                            .Select(md => md.DowntimeReason != null ? $"[{md.DowntimeReason.Category}] {md.DowntimeReason.Description}" : "")
                            .Where(s => !string.IsNullOrEmpty(s))
                            .ToList() ?? new List<string>();
                        <tr>
                            <td>@machine.Id</td>
                            <td><strong>@machine.Name</strong></td>
                            <td>@machine.LineId</td>
                            <td>
                                @if (reasons.Any())
                                {
                                    <span>@string.Join(", ", reasons)</span>
                                }
                                else
                                {
                                    <span class="text-secondary fst-italic">Belum ada downtime reason yang di-assign</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="EditDowntimeMachines" asp-route-id="@machine.Id" class="btn btn-sm btn-info">
                                    <i class="fa-solid fa-pen-to-square me-1"></i>Edit
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


