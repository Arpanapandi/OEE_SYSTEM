@model List<DowntimeReason>
@{
    ViewData["Title"] = "Downtime Reasons";
}

<div class="row mb-3 align-items-center">
    <div class="col-md-6">
        <h2 class="mb-0"><i class="fa-solid fa-exclamation-triangle me-2"></i>Downtime Reasons</h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="CreateDowntimeReason" class="btn btn-warning">
            <i class="fa-solid fa-plus me-2"></i>Add New Reason
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-dark table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Category</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reason in Model)
                    {
                        <tr>
                            <td>@reason.Id</td>
                            <td>@reason.Category</td>
                            <td>@reason.Description</td>
                            <td>
                                <a asp-action="EditDowntimeReason" asp-route-id="@reason.Id" class="btn btn-sm btn-outline-warning me-1">
                                    <i class="fa-solid fa-edit"></i>
                                </a>
                                <a asp-action="DeleteDowntimeReason" asp-route-id="@reason.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fa-solid fa-arrow-left me-2"></i>Back to Admin Panel
    </a>
</div>

