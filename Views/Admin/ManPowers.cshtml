@model List<ManPower>
@{
    ViewData["Title"] = "Man Power Management";
}

<div class="row mb-3 align-items-center">
    <div class="col-md-6">
        <h2 class="mb-0"><i class="fa-solid fa-users me-2"></i>Man Power Management</h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="CreateManPower" class="btn btn-primary">
            <i class="fa-solid fa-plus me-2"></i>Add New Man Power
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fa-solid fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fa-solid fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-dark table-hover">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Name</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var mp in Model)
                        {
                            <tr>
                                <td>@mp.Value</td>
                                <td>@mp.Name</td>
                                <td>
                                    @if (mp.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="EditManPower" asp-route-id="@mp.Id" class="btn btn-sm btn-outline-warning me-1">
                                        <i class="fa-solid fa-edit"></i>
                                    </a>
                                    <form asp-action="DeleteManPower" asp-route-id="@mp.Id" method="post" class="d-inline" onsubmit="return confirm('Apakah Anda yakin ingin menghapus Man Power ini?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="fa-solid fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center text-secondary py-4">
                <i class="fa-solid fa-inbox fa-3x mb-3 opacity-50"></i>
                <div>No Man Power data found</div>
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fa-solid fa-arrow-left me-2"></i>Back to Admin Panel
    </a>
</div>

