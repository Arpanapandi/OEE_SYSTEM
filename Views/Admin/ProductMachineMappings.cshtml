@model IEnumerable<Product>
@{
    ViewData["Title"] = "Product ⇄ Machine Mapping";
}

<div class="row mb-3">
    <div class="col-12 d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-0"><i class="fa-solid fa-link me-2"></i>Product ⇄ Machine Mapping</h2>
            <div class="text-secondary small">Atur mesin mana saja yang boleh menjalankan setiap produk</div>
        </div>
        <a asp-action="Products" class="btn btn-outline-secondary">
            <i class="fa-solid fa-arrow-left me-1"></i>Back to Products
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fa-solid fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th style="width: 25%;">Product</th>
                        <th>Material Code</th>
                        <th>Allowed Machines</th>
                        <th style="width: 12%;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        var machines = p.ProductMachines?.Select(pm => pm.Machine?.Name + " (" + pm.Machine!.LineId + ")").ToList() ?? new List<string>();
                        <tr>
                            <td>@p.Name</td>
                            <td>@p.MaterialCode</td>
                            <td>
                                @if (machines.Any())
                                {
                                    <span>@string.Join(", ", machines)</span>
                                }
                                else
                                {
                                    <span class="text-secondary fst-italic">Belum ada mesin yang di-assign</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="EditProductMachines" asp-route-id="@p.Id" class="btn btn-sm btn-info">
                                    <i class="fa-solid fa-pen-to-square me-1"></i>Edit
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


