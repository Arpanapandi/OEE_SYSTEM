@model DowntimeReason
@{
    ViewData["Title"] = "Edit Downtime Reason";
}

<div class="row mb-3">
    <div class="col-12">
        <h2 class="mb-0"><i class="fa-solid fa-edit me-2"></i>Edit Downtime Reason</h2>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="EditDowntimeReason" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <div class="mb-3">
                <label asp-for="Category" class="form-label">Category</label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-warning">
                    <i class="fa-solid fa-save me-2"></i>Save Changes
                </button>
                <a asp-action="DowntimeReasons" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

