@model ManPower
@{
    ViewData["Title"] = "Create Man Power";
}

<div class="row mb-3">
    <div class="col-12">
        <h2 class="mb-0"><i class="fa-solid fa-plus me-2"></i>Create Man Power</h2>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="CreateManPower" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name <span class="text-danger">*</span></label>
                <input asp-for="Name" class="form-control" placeholder="Contoh: 1 Orang, 2 Orang" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Value" class="form-label">Value <span class="text-danger">*</span></label>
                <input asp-for="Value" class="form-control" type="number" min="1" max="10" />
                <span asp-validation-for="Value" class="text-danger"></span>
                <div class="form-text">Nilai numerik untuk sorting (1, 2, 3, dst)</div>
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                    <label asp-for="IsActive" class="form-check-label">Active</label>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-save me-2"></i>Create
                </button>
                <a asp-action="ManPowers" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

