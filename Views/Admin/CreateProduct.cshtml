@model Product
@{
    ViewData["Title"] = "Create Product";
}

<div class="row mb-3">
    <div class="col-12">
        <h2 class="mb-0"><i class="fa-solid fa-plus me-2"></i>Create Product</h2>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="CreateProduct" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Product Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MaterialCode" class="form-label">Material Code</label>
                <input asp-for="MaterialCode" class="form-control" />
                <span asp-validation-for="MaterialCode" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="UoM" class="form-label">UoM (Unit of Measure)</label>
                <input asp-for="UoM" class="form-control" />
                <span asp-validation-for="UoM" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SLOC" class="form-label">SLOC (Storage Location)</label>
                <input asp-for="SLOC" class="form-control" />
                <span asp-validation-for="SLOC" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PlantId" class="form-label">PLANT</label>
                <select asp-for="PlantId" class="form-select" asp-items="ViewBag.PlantId">
                    <option value="">-- Pilih Plant --</option>
                </select>
                <span asp-validation-for="PlantId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="StandarCycleTime" class="form-label">Standar Cycle Time (detik)</label>
                <input asp-for="StandarCycleTime" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="StandarCycleTime" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ImageUrl" class="form-label">Image URL (optional)</label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="fa-solid fa-save me-2"></i>Create
                </button>
                <a asp-action="Products" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

