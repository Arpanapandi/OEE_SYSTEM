@model Plant
@{
    ViewData["Title"] = "Delete Plant";
}

<div class="row mb-3">
    <div class="col-12">
        <h2 class="mb-0"><i class="fa-solid fa-trash me-2"></i>Delete Plant</h2>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h4 class="text-warning">Are you sure you want to delete this plant?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">ID:</dt>
            <dd class="col-sm-9">@Model.Id</dd>
            
            <dt class="col-sm-3">Code:</dt>
            <dd class="col-sm-9">@Model.Code</dd>
            
            <dt class="col-sm-3">Name:</dt>
            <dd class="col-sm-9">@Model.Name</dd>
        </dl>

        <form asp-action="DeletePlant" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger">
                    <i class="fa-solid fa-trash me-2"></i>Delete
                </button>
                <a asp-action="Plants" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>


